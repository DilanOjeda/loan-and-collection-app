<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/form-card.css">
    <title> <%= title %>  </title>
</head>
<body>
    
    <div class="wrapper">

        <div class="card-content">
            
            <div class="card-header">
                <h1>Create a User</h1>
            </div>
            
            <div class="card-body" id="cardBody">
                <label for="alerts"></label>
                <div id="cardAlerts"></div>

                <form id="signUpForm">
                    <div class="card-row">
                        <div class="card-column">
                            <label for="">Nombres</label>
                            <input type="text" id="names" name="names" placeholder="Escribe tus nombres" required>
                        </div>
                        <div class="card-column">
                            <label for="">Apellidos</label>
                            <input type="text" id="lastNames" name="lastNames" placeholder="Escribe tus apellidos" required>
                        </div>
                    </div>
                    
                    <div class="card-row">
                        <div class="card-column">
                            <label for="">Carnet de Identidad</label>
                            <input type="text" id="ci" name="ci" placeholder="1566999 LP" minlength="0" maxlength="20" required>
                        </div>
                        
                        <div class="card-column">
                            <label for="">Número de Celular</label>
                            <input type="number" id="cellPhone" name="cellPhone" placeholder="72912653" min="0" maxlength="10">
                        </div>
                    </div>
    
                    <div class="card-row">
                        <div class="card-column">
                            <label for="">Sexo</label>
                            <select name="gender" id="gender" required>
                                <option value="">Seleccioná tu sexo</option>
                                <option value="woman">Mujer</option>
                                <option value="man">Hombre</option>
                            </select>
                        </div>
                        
                        <div class="card-column">
                            <label for="">Tipo de Usuario</label >
                            <select name="roleId" id="roleId" required>
                                <option value="">Seleccioná tu tipo de usuario</option>
                                <% if (roles) { %>

                                    <% roles.forEach(rol => { %>
                                        <option value="<%= rol.id %>"> <%= rol.name %> </option>
                                    <% }) %>

                                <% } %>
                            </select>
                        </div>
                    </div>
    
                    <div class="card-row">
                        <div class="card-column">
                            <label for="">Usuario</label>
                            <input type="text" id="username" name="username" placeholder="micoreo@correo.com" required>
                        </div>
                        
                        <div class="card-column">
                            <label for="">Contraseña</label>
                            <input type="password" id="password" name="password" placeholder="Contraseña" required>
                        </div>
                        
                    </div>
                    
                    <div class="card-row">
                        <div class="card-column">
                            <label for="">Domicilio</label>
                            <textarea id="address" rows="2" name="address" placeholder="Dirección de tu domicilio"></textarea>
                        </div>
                    </div>
                    <!-- Photo is hidden for the next version -->
                    
                    <input type="submit" class="btnSignIn" id="btnSignIn" value="Registrarse">
                </form>
                
                
            </div>

            <div class="card-footer">
                <small>¿Tienes una cuenta? <a href="/auth/login">Iniciar Sesión</a> </small>
            </div>

        </div>

    </div>

    <script src="/dist/bundle.js"></script>
</body>
</html>